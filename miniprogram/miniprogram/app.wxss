/**app.wxss**/
.container_center {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}

.container_left {
  display: flex;
  flex-direction: column;
  align-items: left;
  box-sizing: border-box;
}

.container_right {
  display: flex;
  flex-direction: column;
  align-items: right;
  box-sizing: border-box;
}

.layout_horizontal {
  display: flex;
  flex-direction: row;
}

.layout_vertical {
  display: flex;
  flex-direction: column;
}